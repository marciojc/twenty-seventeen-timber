<article id="post-{{ post.ID }}" {{ function('post_class') }}>
  {% if function('is_sticky') and is_home() %}
    {{ twentyseventeen_get_svg({ icon: 'thumb-tack'}) }}
  {% endif %}

  {% include 'post/content-header.twig' %}

  {% include 'post/content-thumbnail.twig' %}

  <div class="entry-content">
    {% if not is_single() and function('get_post_gallery') %}
      <div class="entry-video">
        {{ function('get_post_gallery') }}
      </div>
    {% endif %}

    {% if is_single() or not function('get_post_gallery') %}
      {{ function(
            'the_content',
            __( 'Continue reading<span class="screen-reader-text"> "%s"</span>', 'twentyseventeen' ),
            post.title
          )
      }}

      {{
        function('wp_link_pages', {
          'before'      : '<div class="page-links">' . __( 'Pages:', 'twentyseventeen' ),
          'after'       : '</div>',
          'link_before' : '<span class="page-number">',
          'link_after'  : '</span>',
        })
      }}
    {% endif %}
  </div><!-- .entry-content -->

  {% if is_single() %}
    {{ function('twentyseventeen_entry_footer') }}
  {% endif %}

</article><!-- #post-## -->
