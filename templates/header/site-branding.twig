<div class="site-branding">
  <div class="wrap">

    {{ function('the_custom_logo') }}

    <div class="site-branding-text">
      {% if is_front_page() %}
        <h1 class="site-title"><a href="{{ site.url }}" rel="home">{{ site.name }}</a></h1>
      {% else %}
        <p class="site-title"><a href="{{ site.url }}" rel="home">{{ site.name }}</a></p>
      {% endif %}

      {% set description = function('get_bloginfo', 'description', 'display') %}

      {% if description or function('is_customize_preview') %}
        <p class="site-description">{{ description }}</p>
      {% endif %}
    </div><!-- .site-branding-text -->

    {% if ( ( twentyseventeen_is_frontpage() or ( is_home() and is_front_page() ) ) and not function('has_nav_menu', 'top') ) %}
      <a href="#content" class="menu-scroll-down">
        {{ twentyseventeen_get_svg( { 'icon': 'arrow-right' } ) }}
        <span class="screen-reader-text">
        {{ __( 'Scroll down to content', 'twentyseventeen' ) }}
      </span>
      </a>
    {% endif %}

  </div><!-- .wrap -->
</div><!-- .site-branding -->
