<span class="posted-on">
  <span class="screen-reader-text">{{ __('Posted on', 'twentyseventeen') }}</span>
  <a href="{{ post.link }}" rel="bookmark">
    {% if function('get_the_time',  'U') != post.modified_date('U') %}
      <time class="entry-date published" datetime="{{ post.date(DATE_W3C) }}">{{ post.date }}</time>
      <time class="updated" datetime="{{ post.modified_date(DATE_W3C) }}">{{ post.modified_date }}</time>
    {% else %}
      <time class="entry-date published updated" datetime="{{ post.date(DATE_W3C) }}">{{ post.date }}</time>
    {% endif %}
  </a>
</span>
<span class="byline"> {{ __( 'by', 'twentyseventeen') }}<span class="author vcard"><a class="url fn n" href="">{{ post.author.name}}</a></span></span>
